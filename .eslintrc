{
  "extends": [
    "react-app",
    "react-app/jest",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "no-console": "warn",
    "prefer-const": "error",
    "prettier/prettier": "error",
    "semi": ["warn", "always"],
    "promise/no-nesting": 0,
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "build/"
  ]
}